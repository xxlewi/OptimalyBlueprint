@{
    ViewData["Title"] = "Přehled výpůjček";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Přehled výpůjček</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item active">Přehled výpůjček</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        
        <!-- Rychlý přehled -->
        <div class="row">
            <div class="col-lg-3 col-6">
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3>87</h3>
                        <p>Aktivní výpůjčky</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-book-open"></i>
                    </div>
                    <a asp-controller="Loans" asp-action="Management" class="small-box-footer">
                        Zobrazit všechny <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>23</h3>
                        <p>Dnes vypůjčeno</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-arrow-right"></i>
                    </div>
                    <a asp-controller="Loans" asp-action="Today" class="small-box-footer">
                        Dnešní výpůjčky <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3>15</h3>
                        <p>Dnes vráceno</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-arrow-left"></i>
                    </div>
                    <a asp-controller="Loans" asp-action="Return" class="small-box-footer">
                        Vrácení knihy <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3>12</h3>
                        <p>Po termínu</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    <a asp-controller="Loans" asp-action="Overdue" class="small-box-footer">
                        Knihy po termínu <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
        </div>
        
        <!-- Rychlé akce -->
        <div class="row">
            <div class="col-md-6">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-plus mr-1"></i>
                            Nová výpůjčka
                        </h3>
                    </div>
                    <div class="card-body text-center">
                        <p>Vytvořte novou výpůjčku pro žáka nebo učitele</p>
                        <a asp-controller="Loans" asp-action="New" class="btn btn-success btn-lg">
                            <i class="fas fa-arrow-right mr-1"></i>
                            Nová výpůjčka
                        </a>
                    </div>
                </div>
            </div>
            
            <div class="col-md-6">
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-undo mr-1"></i>
                            Vrácení knihy
                        </h3>
                    </div>
                    <div class="card-body text-center">
                        <p>Zpracujte vrácení knihy od žáka nebo učitele</p>
                        <a asp-controller="Loans" asp-action="Return" class="btn btn-info btn-lg">
                            <i class="fas fa-arrow-left mr-1"></i>
                            Vrátit knihu
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
