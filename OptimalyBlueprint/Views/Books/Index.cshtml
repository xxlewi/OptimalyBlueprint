        <!-- Filtry a vyhledávání -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-filter mr-1"></i>
                            Filtrování a vyhledávání
                        </h3>
                        <div class="card-tools">
                            <a asp-controller="Books" asp-action="Create" class="btn btn-success">
                                <i class="fas fa-plus mr-1"></i>
                                Přidat novou knihu
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="searchText">Vyhledat knihu</label>
                                    <input type="text" class="form-control" id="searchText" placeholder="Název, autor, ISBN...">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="genreFilter">Žánr</label>
                                    <select class="form-control" id="genreFilter">
                                        <option value="">Všechny žánry</option>
                                        <option value="poezie">Poezie</option>
                                        <option value="proza">Próza</option>
                                        <option value="drama">Drama</option>
                                        <option value="detektivka">Detektivka</option>
                                        <option value="fantasy">Fantasy</option>
                                        <option value="sci-fi">Sci-fi</option>
                                        <option value="ucebnice">Učebnice</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="statusFilter">Dostupnost</label>
                                    <select class="form-control" id="statusFilter">
                                        <option value="">Všechny</option>
                                        <option value="available">Dostupné</option>
                                        <option value="borrowed">Vypůjčené</option>
                                        <option value="reserved">Rezervované</option>
                                        <option value="damaged">Poškozené</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label>&nbsp;</label>
                                    <button class="btn btn-primary btn-block">
                                        <i class="fas fa-search mr-1"></i>
                                        Hledat
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
