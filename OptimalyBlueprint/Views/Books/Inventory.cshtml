                                        <td>
                                            <button class="btn btn-sm btn-success">
                                                <i class="fas fa-plus"></i>
                                            </button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-6">
                <div class="card card-danger">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-times mr-1"></i>
                            Chybějící knihy
                        </h3>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Kniha</th>
                                        <th>Umístění</th>
                                        <th>Poslední výpůjčka</th>
                                        <th>Akce</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            <strong>Babička</strong><br>
                                            <small class="text-muted">Božena Němcová</small>
                                        </td>
                                        <td>A1-23</td>
                                        <td>
                                            <small>Jan Novák<br>vráceno 5.12.2024</small>
                                        </td>
                                        <td>
                                            <button class="btn btn-sm btn-info">
                                                <i class="fas fa-history"></i>
                                            </button>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <strong>Dějiny světa</strong><br>
                                            <small class="text-muted">František Palacký</small>
                                        </td>
                                        <td>A2-15</td>
                                        <td>
                                            <small class="text-danger">
                                                Petr Novák<br>
                                                <strong>NEVRACENO</strong>
                                            </small>
                                        </td>
                                        <td>
                                            <button class="btn btn-sm btn-danger">
                                                <i class="fas fa-phone"></i>
                                            </button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Inventura podle sekcí -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
