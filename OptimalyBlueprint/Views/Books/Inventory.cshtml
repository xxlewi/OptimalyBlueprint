                                    <tr class="table-warning">
                                        <td><strong>Učebnice</strong></td>
                                        <td>U1-U5</td>
                                        <td>892</td>
                                        <td>875</td>
                                        <td><span class="badge badge-success">872</span></td>
                                        <td><span class="badge badge-warning">2</span></td>
                                        <td><span class="badge badge-danger">1</span></td>
                                        <td><span class="badge badge-warning">Probíhá</span></td>
