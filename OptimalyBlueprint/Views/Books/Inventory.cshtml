                                        <th>Sekce</th>
                                        <th>Umístění</th>
                                        <th>Celkem knih</th>
                                        <th>Zkontrolováno</th>
                                        <th>Souhlasí</th>
                                        <th>Nesouhlasí</th>
                                        <th>Chybí</th>
                                        <th>Stav</th>
                                        <th>Akce</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr class="table-success">
                                        <td><strong>Próza česká</strong></td>
                                        <td>A1-A3</td>
                                        <td>485</td>
                                        <td>485</td>
                                        <td><span class="badge badge-success">483</span></td>
                                        <td><span class="badge badge-warning">1</span></td>
                                        <td><span class="badge badge-danger">1</span></td>
                                        <td><span class="badge badge-success">Dokončeno</span></td>
                                        <td>
                                            <button class="btn btn-sm btn-info">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                        </td>
                                    </tr>
                                    <tr class="table-success">
                                        <td><strong>Próza světová</strong></td>
                                        <td>B1-B4</td>
                                        <td>623</td>
                                        <td>623</td>
                                        <td><span class="badge badge-success">622</span></td>
                                        <td><span class="badge badge-warning">1</span></td>
                                        <td><span class="badge badge-success">0</span></td>
                                        <td><span class="badge badge-success">Dokončeno</span></td>
                                        <td>
                                            <button class="btn btn-sm btn-info">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                        </td>
