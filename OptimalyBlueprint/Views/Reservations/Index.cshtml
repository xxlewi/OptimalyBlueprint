@{
    ViewData["Title"] = "Rezervace knih";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Správa rezervací</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item active">Rezervace</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        
        <!-- Přehled rezervací -->
        <div class="row">
            <div class="col-lg-3 col-6">
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3>5</h3>
                        <p>Aktivní rezervace</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-bookmark"></i>
                    </div>
                    <a asp-controller="Reservations" asp-action="Manage" class="small-box-footer">
                        Spravovat rezervace <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>12</h3>
                        <p>Dokončené dnes</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-check"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3>3</h3>
                        <p>Vyprší dnes</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-clock"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3>2</h3>
                        <p>Prošlé</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Rychlé akce -->
        <div class="row">
            <div class="col-md-6">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-plus mr-1"></i>
                            Nová rezervace
                        </h3>
                    </div>
                    <div class="card-body text-center">
                        <p>Vytvořte novou rezervace pro žáka nebo učitele</p>
                        <a asp-controller="Reservations" asp-action="Create" class="btn btn-success btn-lg">
                            <i class="fas fa-bookmark mr-1"></i>
                            Rezervovat knihu
                        </a>
                    </div>
                </div>
            </div>
            
            <div class="col-md-6">
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-cogs mr-1"></i>
                            Správa rezervací
                        </h3>
                    </div>
                    <div class="card-body text-center">
                        <p>Zpracujte a spravujte všechne rezervace</p>
                        <a asp-controller="Reservations" asp-action="Manage" class="btn btn-info btn-lg">
                            <i class="fas fa-list mr-1"></i>
                            Spravovat rezervace
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
