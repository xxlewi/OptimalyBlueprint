                                        <td><span class="badge badge-secondary">Nedef.</span></td>
                                        <td><span class="badge badge-warning">Neaktivní</span></td>
                                        <td>
                                            <div class="btn-group">
                                                <a asp-controller="Genres" asp-action="Edit" asp-route-id="6" class="btn btn-sm btn-warning">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <button class="btn btn-sm btn-danger" title="Odstranit">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Nejoblíbenější žánry -->
            <div class="col-md-4">
                <div class="card card-success">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-chart-pie mr-1"></i>
                            Nejoblíbenější žánry
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center border-bottom mb-3">
                            <p class="text-success text-xl">
                                <i class="fas fa-book"></i>
                            </p>
                            <p class="d-flex flex-column text-right">
                                <span class="font-weight-bold">
                                    <span class="text-success">Učebnice</span>
                                </span>
                                <span class="text-muted">892 výpůjček tento měsíc</span>
                            </p>
                        </div>
                        
                        <div class="d-flex justify-content-between align-items-center border-bottom mb-3">
                            <p class="text-warning text-xl">
                                <i class="fas fa-book-open"></i>
                            </p>
                            <p class="d-flex flex-column text-right">
                                <span class="font-weight-bold">
                                    <span class="text-warning">Próza</span>
                                </span>
                                <span class="text-muted">245 výpůjček tento měsíc</span>
                            </p>
                        </div>
                        
                        <div class="d-flex justify-content-between align-items-center border-bottom mb-3">
                            <p class="text-info text-xl">
                                <i class="fas fa-dragon"></i>
                            </p>
                            <p class="d-flex flex-column text-right">
                                <span class="font-weight-bold">
                                    <span class="text-info">Fantasy</span>
                                </span>
                                <span class="text-muted">156 výpůjček tento měsíc</span>
                            </p>
                        </div>
                        
                        <div class="d-flex justify-content-between align-items-center">
                            <p class="text-danger text-xl">
                                <i class="fas fa-search"></i>
                            </p>
                            <p class="d-flex flex-column text-right">
                                <span class="font-weight-bold">
                                    <span class="text-danger">Detektivka</span>
                                </span>
                                <span class="text-muted">98 výpůjček tento měsíc</span>
                            </p>
                        </div>
                    </div>
                </div>
                
                <!-- Rychlé akce -->
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-bolt mr-1"></i>
                            Rychlé akce
                        </h3>
                    </div>
                    <div class="card-body">
                        <button class="btn btn-primary btn-block mb-2">
                            <i class="fas fa-sync mr-1"></i>
                            Aktualizovat statistiky
                        </button>
                        <button class="btn btn-success btn-block mb-2">
                            <i class="fas fa-file-excel mr-1"></i>
                            Export žánrů do Excel
                        </button>
                        <button class="btn btn-info btn-block">
                            <i class="fas fa-chart-bar mr-1"></i>
                            Zobrazit detailní analýzu
                        </button>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
</section>